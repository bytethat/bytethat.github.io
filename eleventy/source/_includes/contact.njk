<div class="contact-form-container">
    <div class="title-container">
        <span class="subtitle">Weâ€™re excited to hear your story.</span>
        <h2>Ready to bring your project to life?</h2>
    </div>
    <form class="form contact-form validate" novalidate>
        <div class="form-group">
            <div class="input-wrapper">
                <label for="name" class="form-label">Name / Surname</label>
                <input name="name" id="name" type="text" class="form-control" placeholder="John Doe"
                    required 
                    maxlength="100"
                >
            </div>
            <div class="form-feedback">
                <span class="feedback invalid name name-required">Please enter your Name / Surname</span>
                <span class="feedback invalid name name-max-length">max-length: 100</span>
            </div>
        </div>

        <div class="form-group">
            <div class="input-wrapper">
                <label for="email" class="form-label">Email address</label>
                <input name="email" id="email" type="text" class="form-control" placeholder="name@example.com" required data-validate="email">
            </div>
            <div class="form-feedback">
                <span class="feedback invalid email email-required">Please enter your Email</span>
                <span class="feedback invalid email email-email">Invalid Email</span>
            </div>
        </div>

        <div class="form-group">
            <div class="input-wrapper">
                <label for="phone" class="form-label">Telephone</label>
                <input name="phone" id="phone" type="text" class="form-control" placeholder="+3069XXXXXXXX"
                    required 
                    maxlength="20"
                    data-validate="pattern(^(?:\+|00)?\d+$)"
                >
            </div>
            <div class="form-feedback">
                <span class="feedback invalid phone phone-required">Please enter your telephone</span>
                <span class="feedback invalid phone phone-pattern">Please enter a valid telephone</span>
            </div>
        </div>

        <div class="form-group">
            <div class="input-wrapper">
                <label for="message" class="form-label">Your message</label>
                <textarea name="message" id="message" class="form-control" placeholder="your message" rows="1"
                    required 
                    minlength="1"
                    maxlength="1000"
                    data-validate="minlength(1),maxlength(1000)"
                ></textarea>
            </div>
            <div class="form-feedback">
                <span class="feedback invalid message message-required">Please enter your message</span>
            </div>
        </div>

        <div class="lower-area">

            <div class="form-group">
                <div class="input-wrapper">
                    <input name="consent" id="consent" type="checkbox" class="form-check"
                        required 
                        data-validate=""
                    >
                    <label for="consent" class="form-label">
                        You have to accept the privacy policy terms. <a class="view-terms" href="#terms-popup">Read the terms</a>
                    </label>
                </div>
                <div class="form-feedback">
                    <span class="feedback invalid consent consent-required">You have to accept the terms before you proceed</span>
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>

</div> 